<?xml version="1.0" encoding="UTF-8"?>
<!--
  Notebook Light Theme - Custom GtkSourceView Style Scheme
  Current line background: 5% darker than editor background
-->
<style-scheme id="notebook-light" _name="Notebook Light" version="1.0">
  <author>Notebook Application</author>
  <_description>Light theme with optimized current line highlighting</_description>

  <!-- Color Palette -->
  <color name="bg"                value="#ffffff"/>
  <color name="current-line"      value="#f2f2f2"/>  <!-- 5% darker than bg -->
  <color name="fg"                value="#000000"/>
  <color name="selection"         value="#add6ff"/>
  <color name="line-numbers-bg"   value="#f0f0f0"/>
  <color name="line-numbers-fg"   value="#237893"/>
  <color name="cursor"            value="#000000"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="fg" background="bg"/>
  <style name="cursor"                      foreground="cursor"/>
  <style name="current-line"                background="current-line"/>
  <style name="line-numbers"                foreground="line-numbers-fg" background="line-numbers-bg"/>
  <style name="selection"                   foreground="fg" background="selection"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="fg" background="selection" bold="true"/>
  <style name="bracket-mismatch"            foreground="#ff0000" background="bg" bold="true"/>

  <!-- Search -->
  <style name="search-match"                background="#ffff00"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="#008000" italic="true"/>
  <style name="def:shebang"                 foreground="#008000" italic="true"/>
  <style name="def:doc-comment-element"     foreground="#008000" italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="#0000ff"/>
  <style name="def:string"                  foreground="#a31515"/>
  <style name="def:special-char"            foreground="#811f3f"/>
  <style name="def:special-constant"        foreground="#0000ff" bold="true"/>
  <style name="def:number"                  foreground="#098658"/>
  <style name="def:floating-point"          foreground="#098658"/>
  <style name="def:boolean"                 foreground="#0000ff"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="#001080"/>
  <style name="def:function"                foreground="#795e26"/>
  <style name="def:builtin"                 foreground="#267f99"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="#af00db"/>
  <style name="def:keyword"                 foreground="#0000ff"/>
  <style name="def:operator"                foreground="#000000"/>

  <!-- Types -->
  <style name="def:type"                    foreground="#267f99"/>
  <style name="def:preprocessor"            foreground="#af00db"/>

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         bold="true"/>
  <style name="def:heading"                 foreground="#0000ff" bold="true"/>

  <!-- Errors -->
  <style name="def:error"                   foreground="#ff0000" underline="true"/>
  <style name="def:warning"                 foreground="#bf8803" underline="true"/>
  <style name="def:note"                    foreground="#0451a5"/>

  <!-- Others -->
  <style name="def:underlined"              underline="single"/>
  <style name="def:net-address"            foreground="#0451a5" underline="true"/>
</style-scheme>
